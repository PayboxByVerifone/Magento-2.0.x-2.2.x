<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="pbxep_financial" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
        <attribute type="expanded">0</attribute>
        <label>Pay by Card and Means of Financing</label>

        <field id="active" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/pbxep_financial/active</config_path>
        </field>
        <field id="cctypes" translate="label comment" type="multiselect" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Card type</label>
            <config_path>payment/pbxep_financial/cctypes</config_path>
            <source_model>Paybox\Epayment\Model\Admin\Cards\Financial</source_model>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
        <field id="title" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
        	<label>Title</label>
            <config_path>payment/pbxep_financial/title</config_path>
        	<depends>
                <field id="active">1</field>
            </depends>
        </field>
        <field id="sort_order" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
        	<label>Sort Order</label>
        	<config_path>payment/pbxep_financial/sort_order</config_path>
        	<frontend_class>validate-number</frontend_class>
        	<depends>
                <field id="active">1</field>
            </depends>
        </field>

        <group id="pbxep_financial_status" translate="label" showInDefault="1" showInWebsite="1" sortOrder="10">
            <attribute type="expanded">0</attribute>
        	<label>Payment status</label>
        	<depends>
                <field id="pbxep_payments/pbxep_financial/active">1</field>
            </depends>
	        <field id="status_paid" translate="label comment" type="select" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
	        	<label>Once paid</label>
                <config_path>payment/pbxep_financial/status_paid</config_path>
	        	<source_model>Paybox\Epayment\Model\Admin\Order\Status\Processing</source_model>
	        	<depends>
	                <field id="pbxep_payments/pbxep_financial/active">1</field>
	            </depends>
	        </field>
	    </group>
	    <group id="pbxep_financial_conditions" translate="label" showInDefault="1" showInWebsite="1" sortOrder="20">
        	<label>Conditions</label>
        	<depends>
                <field id="pbxep_payments/pbxep_financial/active">1</field>
            </depends>
	        <field id="allowspecific" translate="label comment" type="select" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1">
	        	<label>Payment from Applicable Countries</label>
	        	<source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
	        	<config_path>payment/pbxep_financial/allowspecific</config_path>
	        	<depends>
	                <field id="pbxep_payments/pbxep_financial/active">1</field>
	            </depends>
	        </field>
	        <field id="specificcountry" translate="label comment" type="multiselect" sortOrder="220" showInDefault="1" showInWebsite="1" showInStore="1">
	        	<label>Payment from Specific Countries</label>
	        	<source_model>Magento\Paypal\Model\System\Config\Source\BuyerCountry</source_model>
	        	<config_path>payment/pbxep_financial/specificcountry</config_path>
	        	<depends>
	                <field id="allowspecific">1</field>
	                <field id="pbxep_payments/pbxep_financial/active">1</field>
	            </depends>
	        </field>
	        <field id="min_order_total" translate="label comment" type="text" sortOrder="230" showInDefault="1" showInWebsite="1" showInStore="1">
	        	<label>Minimum Order Total</label>
	        	<config_path>payment/pbxep_financial/min_order_total</config_path>
	        	<depends>
	                <field id="pbxep_payments/pbxep_financial/active">1</field>
	            </depends>
	        </field>
	        <field id="max_order_total" translate="label comment" type="text" sortOrder="240" showInDefault="1" showInWebsite="1" showInStore="1">
	        	<label>Maximum Order Total</label>
	            <config_path>payment/pbxep_financial/max_order_total</config_path>
	        	<depends>
	                <field id="pbxep_payments/pbxep_financial/active">1</field>
	            </depends>
	        </field>
	    </group>
    </group>
</include>